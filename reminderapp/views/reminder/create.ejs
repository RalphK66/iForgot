<div class="container">
  <form action="/reminder" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title">
    </div>
    <div class="form-group" style="width:250px;">
      <div class="flatpickr">
        <input type="text" placeholder="Select Date.." data-input name="datetime"> <!-- input is mandatory -->

        <a class="input-button" title="toggle" data-toggle>
          <i class="fa fa-calendar"></i>
        </a>
        <a class="input-button" title="clear" data-clear>
          <i class="fa fa-close"></i>
        </a>
      </div>
    </div>
    <div class="form-group">
      <h4 class="reminder-heading">Tasks</h4>
      <span onclick="newElement()" class="btn btn-default" style="border: none;">
        <i class="fa fa-plus fa-1x" style="color: slategray;"></i>
        </span>
      <ul id="myUL"></ul>
    </div>
    <div class="footer">
      <div style="display:flex; flex-direction:row; justify-content: space-around;">
        <div style="display: flex; flex-direction:column;">
          <h5>Save Reminder</h5>
          <button type="submit" class="main-button" style="background: none; border: none; padding: 0;">
            <i class="fa fa-check-circle fa-4x" style="color: white;"></i>
          </button>
        </div>
        <div style="display: flex; flex-direction:column;">
          <h5>View All Reminders</h5>
          <a href="/reminder" class="main-button">
            <div class="fa-stack fa-2x">
              <i class="fa fa-circle fa-stack-2x"></i>
              <i class="fas fa-eye fa-stack-1x"></i>
            </div>
          </a>
        </div>
      </div>
  </form>
</div>

