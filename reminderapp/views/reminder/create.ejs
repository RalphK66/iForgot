<div class="container">
  <form action="/reminder" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title">
    </div>
    <div class="form-group" style="width:250px;">
      <div class='input-group date' id='datetimepicker1' aria-placeholder="mm/dd/yy hh:mm ">
        <input type='text' class="form-control">
        <span class="input-group-addon" style="font-size: 11px;">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>
    <div class="form-group">
      <h4 class="reminder-heading">Tasks</h4>
      <ul id="myUL">
        <div>
          <span onclick="newElement()" class="btn btn-default" style="border: none;"><i class="fa fa-plus fa-1x"
              style="color: slategray;"></i></span>
          <input type="text" id="myInput" placeholder="new subtask"
            style="border:none;  border-radius: 10px; width: 80%;">
        </div>
      </ul>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>