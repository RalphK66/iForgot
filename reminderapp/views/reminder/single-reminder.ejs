<div class="container" style="margin-bottom: 5px;">
  <h3><strong><%= reminderItem.title %> </strong></h3>
  <h4><%= reminderItem.datetime %></h4>
  <div class="form-group">
    <h4 class="reminder-heading">Tasks</h4>
    <ul class="list-group" id="myUL">
      <% if (reminderItem.tasks.length > 0 && reminderItem.tasks != "") { %>
      <% reminderItem.tasks.forEach(function (task) { %>
      <li class="list-group-item task-item">
        <div style="display: flexbox;">
          <span><strong><%= task %> </strong></span>
        </div>
      </li>
      <% }) } %>
  </div>
  <!-- <a class="btn btn-warning" href=<%= "/reminder/" + reminderItem.id + "/edit" %>>Edit</a> -->
  <form class="deleteForm " method="POST" action=<%= "/reminder/delete/" + reminderItem.id %>>
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>

</div>
<div class="footer">
  <div style="display:flex; flex-direction:row; justify-content: space-around;">
    <div style="display: flex; flex-direction:column;">
      <h5>Edit</h5>
      <a class="main-button" href=<%= "/reminder/" + reminderItem.id + "/edit" %>>
        <div class="fa-stack fa-2x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fas fa-pen fa-stack-1x"></i>
        </div>
      </a>
    </div>
    <div style="display: flex; flex-direction:column;">
      <h5>View All Reminders</h5>
      <a href="/reminder" class="main-button">
        <div class="fa-stack fa-2x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fas fa-eye fa-stack-1x"></i>
        </div>
      </a>
    </div>

  </div>
</div>